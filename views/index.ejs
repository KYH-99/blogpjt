      <!-- 최근 게시물 -->
      <section class="articles">
        <h2 class="articles-heading"><%= locals.title %></h2>
        <ul class="article-ul">
            <% if (data.length > 0) { %>
                <% data.forEach(post => { %>
                    <li>
                        <a href="/post/<%= post._id %>">
                            <span><%= post.title %></span>
                            <span class="article-list-date"><%= post.createdAt.toDateString() %></span>
                        </a>
                    </li>
                <% }) %>
            <% } else { %>
                <li>해당 카테고리에 게시물이 없습니다.</li>
            <% } %>
        </ul>
    </section>
      